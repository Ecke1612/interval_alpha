<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox_header" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.CTR_Config">
   <children>
      <Label text="Einstellungen">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <HBox fx:id="mainHBox">
         <children>
            <VBox fx:id="vbox_Text" prefWidth="400.0" spacing="10.0">
               <children>
                  <Label text="automatisch auf Uppdates überprüfen">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label text="Mehrere Uhren gleichzeitig laufen lassen" />
                  <Label text="Auto-Stop einschalten" />
                  <Label text="Abfrage-Interval (in Min)">
                     <VBox.margin>
                        <Insets left="60.0" />
                     </VBox.margin>
                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </Label>
                  <Label text="Projekt-Mindest-Laufzeit (in Std)">
                     <VBox.margin>
                        <Insets left="60.0" />
                     </VBox.margin>
                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </Label>
                  <Label text="Feierabend (hh)">
                     <VBox.margin>
                        <Insets left="60.0" />
                     </VBox.margin>
                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
            <VBox fx:id="vbox_Control" spacing="10.0">
               <children>
                  <CheckBox fx:id="check_update" mnemonicParsing="false">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></CheckBox>
                  <CheckBox fx:id="check_multiClock" mnemonicParsing="false" />
                  <CheckBox fx:id="check_autostop" mnemonicParsing="false" />
                  <ComboBox fx:id="cbox_interval" prefWidth="55.0">
                     <padding>
                        <Insets top="-3.0" />
                     </padding>
                  </ComboBox>
                  <ComboBox fx:id="cbox_minTime" prefWidth="55.0">
                     <padding>
                        <Insets top="-3.0" />
                     </padding>
                  </ComboBox>
                  <ComboBox fx:id="cbox_rushHour" prefWidth="55.0">
                     <padding>
                        <Insets top="-3.0" />
                     </padding>
                  </ComboBox>
                  <HBox>
                     <children>
                        <Button fx:id="btn_save" mnemonicParsing="false" onAction="#save" text="Speicher">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="label_console" textFill="#797979">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
